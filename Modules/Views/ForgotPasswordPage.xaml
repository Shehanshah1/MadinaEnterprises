<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MadinaEnterprises.Modules.Views.ForgotPasswordPage"
             BackgroundColor="#F4F4F4"
             Title="">

    <ScrollView>
        <VerticalStackLayout Spacing="0" Padding="0">

            <!-- Header -->
            <Grid BackgroundColor="#A4C400" HeightRequest="96">
                <Label Text="MADINA ENTERPRISES"
                       FontAttributes="Bold"
                       FontSize="52"
                       TextColor="#333333"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Grid>

            <!-- Error Message -->
            <Label x:Name="errorMessageLabel"
                   IsVisible="False"
                   TextColor="#DC2626"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,12,0,0"/>

            <!-- Form -->
            <Grid BackgroundColor="White" Padding="24" Margin="24,20" HorizontalOptions="Center" WidthRequest="700">
                <VerticalStackLayout Spacing="18" HorizontalOptions="Center" WidthRequest="520">

                    <Image Source="madina_logo.png"
                           HeightRequest="140"
                           Aspect="AspectFit"
                           Margin="0,0,0,6"/>

                    <Label Text="Forgot Your Password?"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#333333"
                           HorizontalOptions="Center"/>

                    <Label Text="Enter your email and we'll send you reset instructions."
                           TextColor="#666666"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           FontSize="14"/>

                    <!-- Email -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Email"
                               TextColor="#A4C400"
                               FontAttributes="Bold"/>
                        <Entry x:Name="emailEntry"
                               Placeholder="Enter your email address"
                               Keyboard="Email"
                               BackgroundColor="#F6F8FA"
                               TextColor="#333333"
                               HeightRequest="46"/>
                    </VerticalStackLayout>

                    <!-- Actions -->
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                        <Button x:Name="sendButton"
                                Text="Send Reset Link"
                                BackgroundColor="#A4C400"
                                TextColor="White"
                                FontAttributes="Bold"
                                HeightRequest="48"
                                Clicked="OnSendLinkClicked"/>
                        <ActivityIndicator x:Name="busyIndicator"
                                           Grid.Column="1"
                                           IsVisible="False"
                                           IsRunning="False"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center"/>
                    </Grid>

                    <Button Text="Back to Login"
                            BackgroundColor="Transparent"
                            TextColor="#0B72D2"
                            Clicked="OnBackToLoginClicked"/>
                </VerticalStackLayout>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
