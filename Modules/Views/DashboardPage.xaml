<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MadinaEnterprises.Modules.Views.DashboardPage"
             BackgroundColor="#242424"
             MinimumHeightRequest="600"
             MinimumWidthRequest="1200">

    <Grid ColumnDefinitions="253,*">
        <!-- Sidebar -->
        <BoxView Grid.Column="0" Color="#98cb00"/>
        <BoxView Grid.Column="1" Color="White"/>

        <StackLayout Grid.Column="0" Padding="10" Spacing="30">
            <Button Text="Dashboard" FontSize="Small" BackgroundColor="White" TextColor="Black" CornerRadius="0" Margin="0,50,0,0"/>
            <Button Text="Ginners" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnGinnersPageButtonClicked"/>
            <Button Text="Mills" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnMillsPageButtonClicked"/>
            <Button Text="Contracts" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnContractsPageButtonClicked"/>
            <Button Text="Deliveries" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnDeliveriesPageButtonClicked"/>
            <Button Text="Payments" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnPaymentsPageButtonClicked"/>
            <Button Text="Ginner Ledger" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnGinnerLedgerPageButtonClicked"/>
            <Button Text="Logout" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnLogOutButtonClicked"/>
        </StackLayout>

        <!-- Main Content -->
        <ScrollView Grid.Column="1">
            <VerticalStackLayout Padding="30" Spacing="20">

                <!-- Title -->
           <Label Text="Dashboard"
            FontSize="Header"
            FontAttributes="Bold"
            TextColor="Black"
            HorizontalOptions="Start"/>

                    <BoxView HeightRequest="2" BackgroundColor="#111827" Opacity="0.9"/>

                <!-- Widgets Grid -->
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="20" RowSpacing="20">

                    <Frame Grid.Row="0" Grid.Column="0" BackgroundColor="#FAFAFA" BorderColor="#EAEAEA" CornerRadius="14" HasShadow="False" Padding="16">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Total Commission" FontSize="15" FontAttributes="Bold" TextColor="#111827"/>
                            <Label x:Name="TotalCommissionLabel" Text="Loading..." FontSize="22" FontAttributes="Bold" TextColor="#4B5563"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Row="0" Grid.Column="1" BackgroundColor="#FAFAFA" BorderColor="#EAEAEA" CornerRadius="14" HasShadow="False" Padding="16">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Payment Made" FontSize="15" FontAttributes="Bold" TextColor="#111827"/>
                            <Label x:Name="PaymentMadeLabel" Text="Loading..." FontSize="22" FontAttributes="Bold" TextColor="#4B5563"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Row="1" Grid.Column="0" BackgroundColor="#FAFAFA" BorderColor="#EAEAEA" CornerRadius="14" HasShadow="False" Padding="16">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Payment Due" FontSize="15" FontAttributes="Bold" TextColor="#111827"/>
                            <Label x:Name="PaymentDueLabel" Text="Loading..." FontSize="22" FontAttributes="Bold" TextColor="#4B5563"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="#FAFAFA" BorderColor="#EAEAEA" CornerRadius="14" HasShadow="False" Padding="16">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Bales Sold" FontSize="15" FontAttributes="Bold" TextColor="#111827"/>
                            <Label x:Name="BalesSoldLabel" Text="Loading..." FontSize="22" FontAttributes="Bold" TextColor="#4B5563"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Row="2" Grid.Column="0" BackgroundColor="#FAFAFA" BorderColor="#EAEAEA" CornerRadius="14" HasShadow="False" Padding="16">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Total Ginners" FontSize="15" FontAttributes="Bold" TextColor="#111827"/>
                            <Label x:Name="TotalGinnersLabel" Text="Loading..." FontSize="22" FontAttributes="Bold" TextColor="#4B5563"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Row="2" Grid.Column="1" BackgroundColor="#FAFAFA" BorderColor="#EAEAEA" CornerRadius="14" HasShadow="False" Padding="16">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Total Mills" FontSize="15" FontAttributes="Bold" TextColor="#111827"/>
                            <Label x:Name="TotalMillsLabel" Text="Loading..." FontSize="22" FontAttributes="Bold" TextColor="#4B5563"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Row="3" Grid.Column="0" BackgroundColor="#FAFAFA" BorderColor="#EAEAEA" CornerRadius="14" HasShadow="False" Padding="16">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Avg. Commission Rate" FontSize="15" FontAttributes="Bold" TextColor="#111827"/>
                            <Label x:Name="AvgCommissionRateLabel" Text="Loading..." FontSize="22" FontAttributes="Bold" TextColor="#4B5563"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
