<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MadinaEnterprises.Modules.Views.DeliveriesPage"
             BackgroundColor="#242424"
             MinimumHeightRequest="600"
             MinimumWidthRequest="1200">

    <Grid ColumnDefinitions="253,*">
        <!-- Sidebar Styling -->
        <BoxView Grid.Column="0" Grid.RowSpan="7" Color="#98cb00" />
        <BoxView Grid.Column="1" Grid.RowSpan="7" Color="White" />

        <!-- Sidebar Buttons -->
        <StackLayout Grid.Column="0" Padding="10" Spacing="30">
            <Button Text="Dashboard" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Margin="0,50,0,0" Clicked="OnDashboardPageButtonClicked"/>
            <Button Text="Ginners" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnGinnersPageButtonClicked"/>
            <Button Text="Mills" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnMillsPageButtonClicked"/>
            <Button Text="Contracts" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnContractsPageButtonClicked"/>
            <Button Text="Deliveries" FontSize="Small" BackgroundColor="White" TextColor="Black" CornerRadius="0" Clicked="OnDeliveriesPageButtonClicked"/>
            <Button Text="Payments" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnPaymentsPageButtonClicked"/>
            <Button Text="Ginner Ledger" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnGinnerLedgerPageButtonClicked"/>
            <Button Text="Logout" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnLogOutButtonClicked"/>
        </StackLayout>

        <!-- Main Content Area with Scroll Fix -->
        <ScrollView Grid.Column="1">
            <VerticalStackLayout Padding="20" Spacing="20">
                <!-- Title -->
                <Label Text="Delivery Management"
                     FontSize="Header"
                     FontAttributes="Bold"
                     TextColor="Black"
                     HorizontalOptions="Start"/>

                <BoxView HeightRequest="2" BackgroundColor="Black" />



                <!-- Form Card -->
                <Frame Padding="20" BackgroundColor="#f5f5f5" CornerRadius="10" HasShadow="True">
                    <!-- Frame must have ONE child -->
                    <VerticalStackLayout Spacing="16">

                        <!-- Form Grid -->
                        <Grid ColumnDefinitions="*,*" RowSpacing="12"
              RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">

                            <!-- Labels -->
                            <Label Text="Delivery ID"    Grid.Row="1" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Contract Picker"       Grid.Row="2" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Amount"     Grid.Row="3" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Total Bales"              Grid.Row="4" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Factory Weight Entry"           Grid.Row="5" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Mill Weight Entry"               Grid.Row="6" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Truck Number"               Grid.Row="7" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Driver Contact"      Grid.Row="8" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Departure Date"    Grid.Row="9" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Delivery Date"           Grid.Row="10" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>

                            <!-- Inputs (names unchanged) -->
                            <Picker  x:Name="deliveryPicker" Title="Select Delivery to Edit/Delete" SelectedIndexChanged="OnDeliverySelected" IsVisible="False" Grid.Row="0" Grid.Column="1" BackgroundColor="White" TextColor="Black" />
                            <Entry x:Name="deliveryIDEntry" Placeholder="Delivery ID" BackgroundColor="White" TextColor="Black"    Grid.Row="1" Grid.Column="1" />
                            <Picker  x:Name="contractPicker" Grid.Row="2" Grid.Column="1" Title="Select Contract" TitleColor="Black" BackgroundColor="LightGray"  TextColor="Black" SelectedIndexChanged="OnContractChanged"/>
                            <Entry  x:Name="amountEntry" Placeholder="Amount (suggested from mill weight, editable)" Keyboard="Numeric" BackgroundColor="White" TextColor="Black" Grid.Row="3" Grid.Column="1" TextChanged="OnAmountChanged"/>
                            <Entry x:Name="totalBalesEntry" Placeholder="Total Bales" Keyboard="Numeric" BackgroundColor="White" TextColor="Black" Grid.Row="4" Grid.Column="1"/>
                            <Entry x:Name="factoryWeightEntry" Placeholder="Factory Weight" Keyboard="Numeric"  BackgroundColor="White" TextColor="Black" Grid.Row="5" Grid.Column="1"/>
                            <Entry x:Name="millWeightEntry" Placeholder="Mill Weight (kg)" Keyboard="Numeric" BackgroundColor="White" TextColor="Black" Grid.Row="6" Grid.Column="1" TextChanged="OnMillWeightChanged"/>
                            <Entry x:Name="truckNoEntry" Placeholder="Truck Number"        BackgroundColor="White" TextColor="Black" Grid.Row="7" Grid.Column="1"/>
                            <Entry x:Name="driverContactEntry" Placeholder="Driver Contact" Keyboard="Telephone"  BackgroundColor="White" TextColor="Black" Grid.Row="8" Grid.Column="1"/>
                            <DatePicker x:Name="departureDatePicker" TextColor="Black" Background="LightGray"  Grid.Row="9" Grid.Column="1"/>
                            <DatePicker x:Name="deliveryDatePicker" TextColor="Black" Background="LightGray" Grid.Row="10" Grid.Column="1"/>
                           
                        </Grid>

                        <!-- Action Buttons (now inside the same container) -->
                        <HorizontalStackLayout  Spacing="10" HorizontalOptions="Center">
                            <Button Text="Save Delivery" Clicked="OnSaveDeliveryClicked" BackgroundColor="#98cb00" TextColor="White"/>
                            <Button Text="Update Delivery" Clicked="OnUpdateDeliveryClicked" BackgroundColor="#ff9800" TextColor="White"/>
                            <Button Text="Delete Delivery" Clicked="OnDeleteDeliveryClicked" BackgroundColor="Red" TextColor="White"/>
                        </HorizontalStackLayout>


                    </VerticalStackLayout>
                </Frame>

             
                <!-- Existing Deliveries List -->
                <Label Text="Existing Deliveries" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
                <SearchBar x:Name="deliverySearchBar" TextColor="Black"
           Placeholder="Search by Delivery ID..."
           TextChanged="OnSearchTextChanged"
           BackgroundColor="White"/>

                <CollectionView x:Name="deliveryListView"
                HeightRequest="300"
                SelectionMode="Single"
                SelectionChanged="OnDeliveryListSelected"
                BackgroundColor="WhiteSmoke"
                Margin="0,0,0,20">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="10" Margin="5" BorderColor="#1976d2" CornerRadius="5" BackgroundColor="White">
                                <Label Text="{Binding DeliveryID}" FontSize="16" TextColor="Black"/>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
