<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MadinaEnterprises.Modules.Views.LoginPage"
             BackgroundColor="#F4F4F4"
             MinimumHeightRequest="700"
             MinimumWidthRequest="1000">

    <ScrollView>
        <VerticalStackLayout Spacing="0" Padding="0">

            <!-- Header (brand lime + dark text to match logo) -->
            <Grid BackgroundColor="#A4C400" HeightRequest="96">
                <Label Text="MADINA ENTERPRISES"
                       FontAttributes="Bold"
                       FontSize="52"
                       LetterSpacing="1"
                       TextColor="#333333"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Grid>

            <!-- Error Message -->
            <Label x:Name="errorMessageLabel"
                   TextColor="#DC2626"
                   FontAttributes="Bold"
                   FontSize="14"
                   IsVisible="False"
                   HorizontalOptions="Center"
                   Margin="0,14,0,4"/>

            <!-- Login Card -->
            <Frame Margin="36,26"
                   Padding="0"
                   BackgroundColor="White"
                   HasShadow="True"
                   CornerRadius="18"
                   HorizontalOptions="Center"
                   WidthRequest="880">

                <!-- Two columns: logo | divider | fields -->
                <Grid ColumnDefinitions="Auto,24,*"
                      VerticalOptions="Center"
                      Padding="26">

                    <!-- Logo -->
                    <VerticalStackLayout Grid.Column="0"
                                         Spacing="12"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center"
                                         Padding="4,0,16,0">
                        <Frame BackgroundColor="#F7F9FC"
                               BorderColor="#E7E7E7"
                               CornerRadius="14"
                               Padding="14"
                               HasShadow="False">
                            <Image Source="madina_logo.png"
                                   HeightRequest="180"
                                   WidthRequest="180"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   Aspect="AspectFit"/>
                        </Frame>
                        <Label Text="Trusted Cotton Trading"
                               FontSize="14"
                               TextColor="#6B7280"
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>

                    <!-- Divider -->
                    <BoxView Grid.Column="1"
                             WidthRequest="1"
                             BackgroundColor="#DDDDDD"
                             HeightRequest="280"
                             VerticalOptions="Center"
                             Opacity="0.8"/>

                    <!-- Fields -->
                    <VerticalStackLayout Grid.Column="2"
                                         Spacing="14"
                                         VerticalOptions="Center"
                                         Padding="14,0,0,0"
                                         MinimumWidthRequest="340">

                        <Label Text="Welcome back"
                               FontAttributes="Bold"
                               FontSize="30"
                               TextColor="#333333"/>

                        <Label Text="Sign in with your admin credentials"
                               FontSize="16"
                               TextColor="#666666"/>

                        <!-- Email -->
                        <VerticalStackLayout Spacing="6" Margin="0,8,0,0">
                            <Label Text="Username"
                                   TextColor="#5B6E00"
                                   FontAttributes="Bold"/>
                            <Entry x:Name="emailEntry"
                                   Placeholder="Enter your username"
                                   BackgroundColor="#F6F8FA"
                                   TextColor="#333333"
                                   PlaceholderColor="#9CA3AF"
                                   HeightRequest="50"/>
                        </VerticalStackLayout>

                        <!-- Password + Show/Hide -->
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Password"
                                   TextColor="#5B6E00"
                                   FontAttributes="Bold"/>
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                <Entry x:Name="passwordEntry"
                                       Placeholder="Enter your password"
                                       IsPassword="True"
                                       BackgroundColor="#F6F8FA"
                                       TextColor="#333333"
                                       PlaceholderColor="#9CA3AF"
                                       HeightRequest="50"
                                       Grid.Column="0"/>
                                <Button x:Name="showHidePasswordButton"
                                        Text="Show"
                                        BackgroundColor="#A4C400"
                                        TextColor="White"
                                        FontAttributes="Bold"
                                        CornerRadius="10"
                                        Padding="14,8"
                                        HeightRequest="50"
                                        Clicked="showHidePasswordButton_Clicked"
                                        Grid.Column="1"/>
                            </Grid>
                        </VerticalStackLayout>

                        <!-- Login -->
                        <Button x:Name="loginButton"
                                Text="Login"
                                BackgroundColor="#A4C400"
                                TextColor="White"
                                FontAttributes="Bold"
                                FontSize="17"
                                CornerRadius="12"
                                HeightRequest="52"
                                Margin="0,8,0,0"
                                Clicked="OnLoginButtonClicked"/>
                    </VerticalStackLayout>
                </Grid>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
