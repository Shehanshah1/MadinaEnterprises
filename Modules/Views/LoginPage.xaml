<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MadinaEnterprises.Modules.Views.LoginPage"
             BackgroundColor="#F4F4F4"
             MinimumHeightRequest="700"
             MinimumWidthRequest="1000">

    <ScrollView>
        <VerticalStackLayout Spacing="0" Padding="0">

            <!-- Header (brand lime + dark text to match logo) -->
            <Grid BackgroundColor="#A4C400" HeightRequest="96">
                <Label Text="MADINA ENTERPRISES"
                       FontAttributes="Bold"
                       FontSize="52"
                       TextColor="#333333"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Grid>

            <!-- Error Message -->
            <Label x:Name="errorMessageLabel"
                   TextColor="#DC2626"
                   FontAttributes="Bold"
                   FontSize="14"
                   IsVisible="False"
                   HorizontalOptions="Center"
                   Margin="0,12"/>

            <!-- Login Card (no CornerRadius) -->
            <Frame Margin="36,28"
                   Padding="24"
                   BackgroundColor="White"
                   HasShadow="True"
                   HorizontalOptions="Center"
                   WidthRequest="880">

                <!-- Two columns: logo | divider | fields -->
                <Grid ColumnDefinitions="Auto,24,*" VerticalOptions="Center">

                    <!-- Logo -->
                    <Image Source="madina_logo.png"
                           Grid.Column="0"
                           HeightRequest="200"
                           WidthRequest="200"
                           HorizontalOptions="Start"
                           VerticalOptions="Center"
                           Aspect="AspectFit"
                           Margin="0,0,16,0"/>

                    <!-- Divider -->
                    <BoxView Grid.Column="1"
                             WidthRequest="1"
                             BackgroundColor="#DDDDDD"
                             HeightRequest="220"
                             VerticalOptions="Center"
                             Opacity="0.7"/>

                    <!-- Fields -->
                    <VerticalStackLayout Grid.Column="2"
                                         Spacing="16"
                                         VerticalOptions="Center"
                                         Padding="8,0,0,0"
                                         MinimumWidthRequest="320">

                        <Label Text="Welcome!"
                               FontAttributes="Bold"
                               FontSize="24"
                               TextColor="#333333"/>

                        <Label Text="Use your hardcoded admin credentials"
                               FontSize="16"
                               TextColor="#666666"/>

                        <!-- Email -->
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Username"
                                   TextColor="#A4C400"
                                   FontAttributes="Bold"/>
                            <Entry x:Name="emailEntry"
                                   Placeholder="Enter your username"
                                   BackgroundColor="#F6F8FA"
                                   TextColor="#333333"
                                   HeightRequest="46"
                                   Keyboard="Default"/>
                        </VerticalStackLayout>

                        <!-- Password + Show/Hide -->
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Password"
                                   TextColor="#A4C400"
                                   FontAttributes="Bold"/>
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                                <Entry x:Name="passwordEntry"
                                       Placeholder="Enter your password"
                                       IsPassword="True"
                                       BackgroundColor="#F6F8FA"
                                       TextColor="#333333"
                                       HeightRequest="46"
                                       Grid.Column="0"/>
                                <Button x:Name="showHidePasswordButton"
                                        Text="Show"
                                        BackgroundColor="#A4C400"
                                        TextColor="White"
                                        FontAttributes="Bold"
                                        Padding="10,6"
                                        Clicked="showHidePasswordButton_Clicked"
                                        Grid.Column="1"/>
                            </Grid>
                        </VerticalStackLayout>

                        <!-- Login -->
                        <Button x:Name="loginButton"
                                Text="Login"
                                BackgroundColor="#A4C400"
                                TextColor="White"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                Clicked="OnLoginButtonClicked"/>
                    </VerticalStackLayout>
                </Grid>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
