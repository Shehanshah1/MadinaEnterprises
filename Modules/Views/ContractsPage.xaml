<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MadinaEnterprises.Modules.Views.ContractsPage"
             BackgroundColor="#242424"
             MinimumHeightRequest="600"
             MinimumWidthRequest="1200">

    <Grid ColumnDefinitions="253,*">
        <!-- Sidebar -->
        <BoxView Grid.Column="0" Color="#98cb00" />
        <BoxView Grid.Column="1" Color="White" />

        <StackLayout Grid.Column="0" Padding="10" Spacing="30">
            <Button Text="Dashboard" BackgroundColor="Black" TextColor="White" CornerRadius="0" Margin="0,50,0,0" Clicked="OnDashboardPageButtonClicked"/>
            <Button Text="Ginners" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnGinnersPageButtonClicked"/>
            <Button Text="Mills" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnMillsPageButtonClicked"/>
            <Button Text="Contracts" BackgroundColor="White" TextColor="Black" CornerRadius="0"/>
            <Button Text="Deliveries" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnDeliveriesPageButtonClicked"/>
            <Button Text="Payments" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnPaymentsPageButtonClicked"/>
            <Button Text="Log Out" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnLogOutButtonClicked"/>
        </StackLayout>

        <!-- Main Content -->
        <ScrollView Grid.Column="1">
            <VerticalStackLayout Padding="30" Spacing="20">
                <Label Text="Contracts" FontSize="Large" FontAttributes="Bold" TextColor="Black"/>
                <Line Stroke="Black" X1="0" Y1="0" X2="1000" Y2="0"/>

                <Picker x:Name="contractPicker" Title="Select Contract to Edit/Delete" SelectedIndexChanged="OnContractSelected"/>
                <Entry x:Name="contractIDEntry" Placeholder="Contract ID"/>
                <Picker x:Name="ginnerPicker" Title="Select Ginner"/>
                <Picker x:Name="millPicker" Title="Select Mill"/>
                <Entry x:Name="totalBalesEntry" Placeholder="Total Bales" Keyboard="Numeric"/>
                <Entry x:Name="pricePerBatchEntry" Placeholder="Price per Batch" Keyboard="Numeric"/>
                <Entry x:Name="commissionEntry" Placeholder="Commission (%)" Keyboard="Numeric"/>
                <DatePicker x:Name="contractDatePicker"/>
                <Editor x:Name="deliveryNotesEditor" Placeholder="Delivery Notes" AutoSize="TextChanges"/>
                <Editor x:Name="paymentNotesEditor" Placeholder="Payment Notes" AutoSize="TextChanges"/>

                <HorizontalStackLayout Spacing="10">
                    <Button Text="Save Contract" Clicked="OnSaveContractClicked" BackgroundColor="#98cb00" TextColor="Black"/>
                    <Button Text="Delete Contract" Clicked="OnDeleteContractClicked" BackgroundColor="Red" TextColor="White"/>
                    <Button Text="Export to DOCX" Clicked="OnExportDocClicked" BackgroundColor="#1976d2" TextColor="White"/>
                    <Button Text="Export to Excel" Clicked="OnExportExcelClicked" BackgroundColor="#43a047" TextColor="White"/>
                </HorizontalStackLayout>

                <!-- Contract List Below -->
                <SearchBar x:Name="contractSearchBar" Placeholder="Search Contract ID..." TextChanged="OnSearchTextChanged"/>
                <CollectionView x:Name="contractListView" HeightRequest="300" SelectionMode="Single" SelectionChanged="OnContractListSelected">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10">
                                <Label Text="{Binding ContractID}" FontSize="Medium" TextColor="Black"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
