<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MadinaEnterprises.Modules.Views.ContractsPage"
             BackgroundColor="#242424"
             MinimumHeightRequest="600"
             MinimumWidthRequest="1200">

    <Grid ColumnDefinitions="253,*">
        <!-- Sidebar -->
        <BoxView Grid.Column="0" Color="#98cb00" />
        <BoxView Grid.Column="1" Color="White" />

        <!-- Sidebar Buttons -->
        <StackLayout Grid.Column="0" Padding="10" Spacing="30">
            <Button Text="Dashboard" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Margin="0,50,0,0" Clicked="OnDashboardPageButtonClicked"/>
            <Button Text="Ginners" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnGinnersPageButtonClicked"/>
            <Button Text="Mills" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnMillsPageButtonClicked"/>
            <Button Text="Contracts" FontSize="Small" BackgroundColor="White" TextColor="Black" CornerRadius="0"/>
            <Button Text="Deliveries" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnDeliveriesPageButtonClicked"/>
            <Button Text="Payments" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnPaymentsPageButtonClicked"/>
            <Button Text="Ginner Ledger" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnGinnerLedgerPageButtonClicked"/>
            <Button Text="Logout" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnLogOutButtonClicked"/>
        </StackLayout>
        <!-- Main Content -->
        <ScrollView Grid.Column="1">
            <VerticalStackLayout Padding="20" Spacing="20">
                <!-- Title -->
                <Label Text="Contract Management"
            FontSize="Header"
            FontAttributes="Bold"
            TextColor="Black"
            HorizontalOptions="Start"/>

                <BoxView HeightRequest="2" BackgroundColor="Black" />

                <!-- Form Card -->
                <Frame Padding="20" BackgroundColor="#f5f5f5" CornerRadius="10" HasShadow="True">
                    <!-- Frame must have ONE child -->
                    <VerticalStackLayout Spacing="16">

                        <!-- Form Grid -->
                        <Grid ColumnDefinitions="*,*" RowSpacing="12"
                        RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">

                            <!-- Labels -->
                            <Label Text="Contract ID Entry"    Grid.Row="1" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Ginner Picker"       Grid.Row="2" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Mill Picker"     Grid.Row="3" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Amount Entry"              Grid.Row="4" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Total Bales Entry"           Grid.Row="5" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Price Per Batch"               Grid.Row="6" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Commission Percentage"      Grid.Row="7" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Contract Date"    Grid.Row="8" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Delivery Notes"           Grid.Row="9" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Payment Notes"           Grid.Row="10" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Description"           Grid.Row="11" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>

                            <!-- Inputs (names unchanged) -->
                            <Picker x:Name="contractPicker" Title="Select Contract to Edit/Delete" BackgroundColor="LightGray" TextColor="Black" IsVisible="False" Grid.Row="0" Grid.Column="1"/>

                            <Entry  x:Name="contractIDEntry" Placeholder="Contract ID" BackgroundColor="White" TextColor="Black"       Grid.Row="1" Grid.Column="1" />
                            <Picker  x:Name="ginnerPicker" Title="Select Ginner" BackgroundColor="LightGray"                             Grid.Row="2" Grid.Column="1"  TitleColor="Black" TextColor="Black"/>
                            <Picker  x:Name="millPicker" Title="Select Mill" BackgroundColor="LightGray"                                 Grid.Row="3" Grid.Column="1"  TitleColor="Black" TextColor="Black"/>
                            <Entry  x:Name="amountEntry" Placeholder="Amount" Keyboard="Numeric" BackgroundColor="White"                 Grid.Row="4" Grid.Column="1" TextColor="Black"/>
                            <Entry x:Name="totalBalesEntry" Placeholder="Total Bales" Keyboard="Numeric" BackgroundColor="White"         Grid.Row="5" Grid.Column="1" TextColor="Black"/>
                            <Entry x:Name="pricePerBatchEntry" Placeholder="Price per Batch" Keyboard="Numeric"  BackgroundColor="White" Grid.Row="6" Grid.Column="1" TextColor="Black" />
                            <Entry  x:Name="commissionEntry" Placeholder="Commission (%)" Keyboard="Numeric" BackgroundColor="White"     Grid.Row="7" Grid.Column="1" TextColor="Black"/>
                            <DatePicker x:Name="contractDatePicker"  BackgroundColor="White"                                             Grid.Row="8" Grid.Column="1"  TextColor="Black" />
                            <Editor x:Name="deliveryNotesEditor" Placeholder="Delivery Notes" AutoSize="TextChanges"  Grid.Row="9" Grid.Column="1" TextColor="Black"  BackgroundColor="White"/>
                            <Editor x:Name="paymentNotesEditor" Placeholder="Payment Notes" AutoSize="TextChanges"                         Grid.Row="10" Grid.Column="1" TextColor="Black" BackgroundColor="White" />
                            <Entry  x:Name="descriptionEntry" Placeholder="Composition, Percentage, Notes" BackgroundColor="White"       Grid.Row="11" Grid.Column="1" TextColor="Black"/>


                        </Grid>

                        <!-- Action Buttons (now inside the same container) -->

                        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                            <Button Text="Save Contract" Clicked="OnSaveContractClicked" BackgroundColor="#98cb00" TextColor="White" CornerRadius="5"/>
                            <Button Text="Update Contract" Clicked="OnUpdateContractClicked" BackgroundColor="#ff9800" TextColor="White" CornerRadius="5"/>
                            <Button Text="Delete Contract" Clicked="OnDeleteContractClicked" BackgroundColor="Red" TextColor="White" CornerRadius="5"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                            <Button Text="Export to DOCX" Clicked="OnExportDocClicked" BackgroundColor="#1976d2" TextColor="White" CornerRadius="5"/>
                            <Button Text="Export to Excel" Clicked="OnExportExcelClicked" BackgroundColor="#43a047" TextColor="White" CornerRadius="5"/>
                        </HorizontalStackLayout>


                    </VerticalStackLayout>
                </Frame>

                <!-- Contract List with Search -->
                <Label Text="Existing Contracts" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
                <SearchBar x:Name="contractSearchBar" Placeholder="Search Contract ID..." TextChanged="OnSearchTextChanged" BackgroundColor="White" TextColor="Black"/>

                <CollectionView x:Name="contractListView"
                BackgroundColor="WhiteSmoke"
                HeightRequest="300"
                SelectionMode="Single"
                SelectionChanged="OnContractListSelected"
                Margin="0,0,0,20">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="10" Margin="5" BorderColor="#1976d2" CornerRadius="5" BackgroundColor="White">
                                <Label FontSize="16" TextColor="Black">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding ContractID}" FontAttributes="Bold" TextColor="Black"/>
                                            <Span Text=" (" TextColor="Black"/>
                                            <Span Text="{Binding GinnerName}" TextColor="Black"/>
                                            <Span Text=" (" TextColor="Black"/>
                                            <Span Text="{Binding GinnerID}" TextColor="Black"/>
                                            <Span Text="))" TextColor="Black"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
