<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MadinaEnterprises.Modules.Views.ContractsPage"
             Title=""
             BackgroundColor="#242424"
             MinimumHeightRequest="600"
             MinimumWidthRequest="1200">

    <ScrollView>
        <Grid ColumnDefinitions="253,*">

            <!-- Left Sidebar Background -->
            <BoxView 
                Grid.Column="0"
                Grid.RowSpan="7"
                Color="#98cb00" />
            <!-- Right Column Background -->
            <BoxView 
                Grid.Column="1"
                Grid.RowSpan="7"
                Color="White"  />

            <!-- Sidebar Buttons and Logo -->
            <StackLayout Grid.Column="0" Padding="10" Spacing="30" Grid.RowSpan="7">
                <Button Text="Dashboard" FontSize="Small" BackgroundColor="Black" TextColor="White" HorizontalOptions="FillAndExpand" CornerRadius="0" Margin="0,50,0,0" Clicked="OnDashboardPageButtonClicked" />
                <Button Text="Ginners" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" HorizontalOptions="FillAndExpand" Clicked="OnGinnersPageButtonClicked" />
                <Button Text="Mills" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" HorizontalOptions="FillAndExpand" Clicked="OnMillsPageButtonClicked" />
                <Button Text="Contracts" FontSize="Small" BackgroundColor="White" TextColor="Black" CornerRadius="0" HorizontalOptions="FillAndExpand" />
                <Button Text="Deliveries" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" HorizontalOptions="FillAndExpand" Clicked="OnDeliveriesPageButtonClicked" />
                <Button Text="Payments" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" HorizontalOptions="FillAndExpand" Clicked="OnPaymentsPageButtonClicked" />
                <Button Text="Log Out" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" HorizontalOptions="FillAndExpand" Clicked="OnLogOutButtonClicked" />
            </StackLayout>

            <!-- Right Content Area -->
            <Grid Grid.Column="1" Padding="40" RowSpacing="20"
                  ColumnDefinitions="*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">

                <Label Grid.Row="0" Text="Contracts" FontSize="Large" FontAttributes="Bold" TextColor="Black" />
                <Line Grid.Row="1" Stroke="Black" X1="0" Y1="0" X2="1000" Y2="0" />

                <Picker Grid.Row="2" x:Name="contractPicker" Title="Select Contract to Edit/Delete" SelectedIndexChanged="OnContractSelected" />
                <Entry Grid.Row="3" x:Name="contractIDEntry" Placeholder="Contract ID" />
                <Picker Grid.Row="4" x:Name="ginnerPicker" Title="Select Ginner" />
                <Picker Grid.Row="5" x:Name="millPicker" Title="Select Mill" />
                <Entry Grid.Row="6" x:Name="totalBalesEntry" Placeholder="Total Bales" Keyboard="Numeric" />
                <Entry Grid.Row="7" x:Name="pricePerBatchEntry" Placeholder="Price per Batch" Keyboard="Numeric" />
                <Entry Grid.Row="8" x:Name="commissionEntry" Placeholder="Commission (%)" Keyboard="Numeric" />
                <DatePicker Grid.Row="9" x:Name="contractDatePicker" />
                <Editor Grid.Row="10" x:Name="deliveryNotesEditor" Placeholder="Delivery Notes" AutoSize="TextChanges" />
                <Editor Grid.Row="11" x:Name="paymentNotesEditor" Placeholder="Payment Notes" AutoSize="TextChanges" />

                <StackLayout Grid.Row="12" Orientation="Horizontal" Spacing="10">
                    <Button Text="Save Contract" Clicked="OnSaveContractClicked" BackgroundColor="#98cb00" TextColor="Black" />
                    <Button Text="Delete Contract" Clicked="OnDeleteContractClicked" BackgroundColor="Red" TextColor="White" />
                </StackLayout>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>
