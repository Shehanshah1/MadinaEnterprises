<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MadinaEnterprises.Modules.Views.MillsPage"
             Title=""
             BackgroundColor="#242424"
             MinimumHeightRequest="600"
             MinimumWidthRequest="1200">

    <Grid ColumnDefinitions="253,*">
        <!-- Sidebar Background -->
        <BoxView Grid.Column="0" Color="#98cb00" />
        <BoxView Grid.Column="1" Color="White" />

        <!-- Sidebar Navigation -->
        <StackLayout Grid.Column="0" Padding="10" Spacing="30">
            <Button Text="Dashboard" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Margin="0,50,0,0" Clicked="OnDashboardPageButtonClicked"/>
            <Button Text="Ginners" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnGinnersPageButtonClicked"/>
            <Button Text="Mills" FontSize="Small" BackgroundColor="White" TextColor="Black" CornerRadius="0" />
            <Button Text="Contracts" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnContractsPageButtonClicked"/>
            <Button Text="Deliveries" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnDeliveriesPageButtonClicked"/>
            <Button Text="Payments" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnPaymentsPageButtonClicked"/>
            <Button Text="Export" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0"  />
            <Button Text="Logout" FontSize="Small" BackgroundColor="Red" TextColor="White" CornerRadius="0"/>
        </StackLayout>

        <!-- Main Content Area -->
        <ScrollView Grid.Column="1" Padding="20">
            <StackLayout Spacing="20">
                <Label Text="Mill Management" FontSize="24" TextColor="Black" HorizontalOptions="Center" />

                <!-- Input Grid -->
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto">
                    <Label Text="Mill Name" Grid.Row="0" Grid.Column="0" />
                    <Entry x:Name="millNameEntry" Grid.Row="0" Grid.Column="1" />

                    <Label Text="Address" Grid.Row="1" Grid.Column="0" />
                    <Entry x:Name="millAddressEntry" Grid.Row="1" Grid.Column="1" />

                    <Label Text="Owner Name" Grid.Row="2" Grid.Column="0" />
                    <Entry x:Name="millOwnerNameEntry" Grid.Row="2" Grid.Column="1" />
                </Grid>

                <!-- Buttons -->
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
                    <Button Text="Add Mill" BackgroundColor="#98cb00" TextColor="White" />
                    <Button Text="Update" BackgroundColor="#ff9800" TextColor="White" />
                    <Button Text="Delete" BackgroundColor="Red" TextColor="White"/>
                </StackLayout>

                <!-- List of Mills -->
                <ListView x:Name="millPicker"
                          ItemsSource="{Binding}"
                          SelectionMode="Single"
                          ItemSelected="OnMillSelected"
                          HeightRequest="300">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding MillName}" Detail="{Binding OwnerName}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
