<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MadinaEnterprises.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MadinaEnterprises.Modules.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <!-- Login Flow (No TabBar) -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <!-- Main App Flow with TabBar -->
    <TabBar x:Name="MainTabBar" IsVisible="False">

        <Tab Title="Dashboard" Icon="dashboard.png">
            <ShellContent
                ContentTemplate="{DataTemplate local:DashboardPage}"
                Route="DashboardPage" />
        </Tab>

        <Tab Title="Ginners" Icon="ginners.png">
            <ShellContent
                ContentTemplate="{DataTemplate local:GinnersPage}"
                Route="GinnersPage" />
        </Tab>

        <Tab Title="Mills" Icon="mills.png">
            <ShellContent
                ContentTemplate="{DataTemplate local:MillsPage}"
                Route="MillsPage" />
        </Tab>

        <Tab Title="Contracts" Icon="contracts.png">
            <ShellContent
                ContentTemplate="{DataTemplate local:ContractsPage}"
                Route="ContractsPage" />
        </Tab>

        <Tab Title="More" Icon="more.png">
            <ShellContent
                ContentTemplate="{DataTemplate local:MorePage}"
                Route="MorePage" />
        </Tab>

    </TabBar>

    <!-- Routes for pages not in TabBar -->
    <ShellContent
        Title="Create Account"
        ContentTemplate="{DataTemplate local:CreateAccountPage}"
        Route="CreateAccountPage"
        IsVisible="False" />

    <ShellContent
        Title="Forgot Password"
        ContentTemplate="{DataTemplate local:ForgotPasswordPage}"
        Route="ForgotPasswordPage"
        IsVisible="False" />

    <ShellContent
        Title="Deliveries"
        ContentTemplate="{DataTemplate local:DeliveriesPage}"
        Route="DeliveriesPage"
        IsVisible="False" />

    <ShellContent
        Title="Payments"
        ContentTemplate="{DataTemplate local:PaymentsPage}"
        Route="PaymentsPage"
        IsVisible="False" />

    <ShellContent
        Title="Ginner Ledger"
        ContentTemplate="{DataTemplate local:GinnerLedgerPage}"
        Route="GinnerLedgerPage"
        IsVisible="False" />

    <ShellContent
        Title="Reports"
        ContentTemplate="{DataTemplate local:ReportsPage}"
        Route="ReportsPage"
        IsVisible="False" />

</Shell>