<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MadinaEnterprises.Modules.Views.PaymentsPage"
             BackgroundColor="#242424"
             MinimumHeightRequest="600"
             MinimumWidthRequest="1200">

    <Grid ColumnDefinitions="253,*">
        <!-- Sidebar -->
        <BoxView Grid.Column="0" Color="#98cb00" />
        <BoxView Grid.Column="1" Color="White" />

        <!-- Sidebar Buttons -->
        <StackLayout Grid.Column="0" Padding="10" Spacing="30">
            <Button Text="Dashboard" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Margin="0,50,0,0" Clicked="OnDashboardPageButtonClicked"/>
            <Button Text="Ginners" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnGinnersPageButtonClicked"/>
            <Button Text="Mills" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnMillsPageButtonClicked"/>
            <Button Text="Contracts" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnContractsPageButtonClicked"/>
            <Button Text="Deliveries" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnDeliveriesPageButtonClicked"/>
            <Button Text="Payments" FontSize="Small" BackgroundColor="White" TextColor="Black" CornerRadius="0"/>
            <Button Text="Log Out" FontSize="Small" BackgroundColor="Black" TextColor="White" CornerRadius="0" Clicked="OnLogOutButtonClicked"/>
        </StackLayout>

        <!-- Main Content -->
        <ScrollView Grid.Column="1">
            <VerticalStackLayout Padding="20" Spacing="20">

                <Label Text="Payment Management"
                       FontSize="Header"
                       FontAttributes="Bold"
                       TextColor="Black"
                       HorizontalOptions="Start"/>
                <BoxView HeightRequest="2" BackgroundColor="Black"/>


                <!-- Form Card -->
                <Frame Padding="20" BackgroundColor="#f5f5f5" CornerRadius="10" HasShadow="True">
                    <!-- Frame must have ONE child -->
                    <VerticalStackLayout Spacing="16">

                        <!-- Form Grid -->
                        <Grid ColumnDefinitions="*,*" RowSpacing="12"
              RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">

                            <!-- Labels -->
                            <Label Text="Payment ID"    Grid.Row="1" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Contract Picker"       Grid.Row="2" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Total Amount"     Grid.Row="3" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Total Paid"              Grid.Row="4" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Remaining Amount"           Grid.Row="5" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Total Bales"               Grid.Row="6" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                            <Label Text="Payment Date"               Grid.Row="7" Grid.Column="0" TextColor="Black" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
 
                            <!-- Inputs (names unchanged) -->
                            <Picker  x:Name="paymentPicker" Title="Select Payment to Edit/Delete" SelectedIndexChanged="OnPaymentSelected" BackgroundColor="White" TextColor="Black" IsVisible="False"/>
                            <Entry  x:Name="paymentIDEntry" Placeholder="Payment ID" BackgroundColor="White" TextColor="Black"    Grid.Row="1" Grid.Column="1" />
                            <Picker  x:Name="contractPicker" Grid.Row="2" Grid.Column="1" Title="Select Contract" TitleColor="Black" BackgroundColor="LightGray"  TextColor="Black"/>
                            <Entry  x:Name="totalAmountEntry" Placeholder="Total Deal Amount" IsReadOnly="True" BackgroundColor="White" TextColor="Black" Grid.Row="3" Grid.Column="1"/>
                            <Entry x:Name="paidAmountEntry" Placeholder="Amount Paid" Keyboard="Numeric" BackgroundColor="White" TextColor="Black" TextChanged="OnPaidAmountChanged" Grid.Row="4" Grid.Column="1"/>
                            <Entry x:Name="remainingAmountEntry" Placeholder="Remaining Amount" IsReadOnly="True" BackgroundColor="White" TextColor="Black" Grid.Row="5" Grid.Column="1"/>
                            <Entry x:Name="balesEntry" Placeholder="Total Bales" Keyboard="Numeric" BackgroundColor="White" TextColor="Black" Grid.Row="6" Grid.Column="1"/>
                            <DatePicker x:Name="paymentDatePicker" TextColor="Black" BackgroundColor="White" Grid.Row="7" Grid.Column="1"/>
            
                        </Grid>

                        <!-- Action Buttons (now inside the same container) -->

                        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                            <Button Text="Save Payment" Clicked="OnSavePaymentClicked" BackgroundColor="#98cb00" TextColor="White"/>
                            <Button Text="Update Payment" Clicked="OnUpdatePaymentClicked" BackgroundColor="#ff9800" TextColor="White"/>
                            <Button Text="Delete Payment" Clicked="OnDeletePaymentClicked" BackgroundColor="Red" TextColor="White"/>
                        </HorizontalStackLayout>


                    </VerticalStackLayout>
                </Frame>


                <!-- List View Section -->
                <Label Text="Existing Payments" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
                <SearchBar x:Name="paymentSearchBar" Placeholder="Search Payment ID..." TextChanged="OnSearchTextChanged" BackgroundColor="White"/>
                <CollectionView x:Name="paymentListView"
                                BackgroundColor="WhiteSmoke"
                                HeightRequest="300"
                                SelectionMode="Single"
                                SelectionChanged="OnPaymentListSelected">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="10" Margin="5" BorderColor="#1976d2" CornerRadius="5" BackgroundColor="White">
                                <Label Text="{Binding PaymentID}" FontSize="16" TextColor="Black"/>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
