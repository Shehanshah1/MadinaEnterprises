<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MadinaEnterprises.Modules.Views.MorePage"
             BackgroundColor="White"
             Title="More Options">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Header -->
            <Frame BackgroundColor="#98cb00" Padding="20" CornerRadius="10" HasShadow="True">
                <VerticalStackLayout>
                    <Label Text="MADINA ENTERPRISES" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           HorizontalOptions="Center"/>
                    <Label Text="Additional Options" 
                           FontSize="14" 
                           TextColor="White" 
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Menu Options -->
            <Frame BackgroundColor="#f5f5f5" Padding="15" CornerRadius="10" HasShadow="True">
                <VerticalStackLayout Spacing="10">

                    <Label Text="Data Management" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="Black"/>

                    <Button Text="📦 Deliveries" 
                            BackgroundColor="#1976d2" 
                            TextColor="White" 
                            CornerRadius="5"
                            Clicked="OnDeliveriesClicked"/>

                    <Button Text="💳 Payments" 
                            BackgroundColor="#43a047" 
                            TextColor="White" 
                            CornerRadius="5"
                            Clicked="OnPaymentsClicked"/>

                    <Button Text="📒 Ginner Ledger" 
                            BackgroundColor="#ff9800" 
                            TextColor="White" 
                            CornerRadius="5"
                            Clicked="OnGinnerLedgerClicked"/>

                </VerticalStackLayout>
            </Frame>

            <Frame BackgroundColor="#f5f5f5" Padding="15" CornerRadius="10" HasShadow="True">
                <VerticalStackLayout Spacing="10">

                    <Label Text="Reports & Analytics" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="Black"/>

                    <Button Text="📊 View Reports" 
                            BackgroundColor="#7b1fa2" 
                            TextColor="White" 
                            CornerRadius="5"
                            Clicked="OnReportsClicked"/>

                    <Button Text="📈 Analytics Dashboard" 
                            BackgroundColor="#0288d1" 
                            TextColor="White" 
                            CornerRadius="5"
                            Clicked="OnAnalyticsClicked"/>

                </VerticalStackLayout>
            </Frame>

            <Frame BackgroundColor="#f5f5f5" Padding="15" CornerRadius="10" HasShadow="True">
                <VerticalStackLayout Spacing="10">

                    <Label Text="System" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="Black"/>

                    <Button Text="💾 Backup Data" 
                            BackgroundColor="#607d8b" 
                            TextColor="White" 
                            CornerRadius="5"
                            Clicked="OnBackupClicked"/>

                    <Button Text="📥 Restore Data" 
                            BackgroundColor="#795548" 
                            TextColor="White" 
                            CornerRadius="5"
                            Clicked="OnRestoreClicked"/>

                    <Button Text="📤 Export Data" 
                            BackgroundColor="#009688" 
                            TextColor="White" 
                            CornerRadius="5"
                            Clicked="OnExportClicked"/>

                    <Button Text="⚙️ Settings" 
                            BackgroundColor="#424242" 
                            TextColor="White" 
                            CornerRadius="5"
                            Clicked="OnSettingsClicked"/>

                </VerticalStackLayout>
            </Frame>

            <Frame BackgroundColor="#f5f5f5" Padding="15" CornerRadius="10" HasShadow="True">
                <VerticalStackLayout Spacing="10">

                    <Label Text="Account" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="Black"/>

                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="10">
                        <Label Grid.Row="0" Grid.Column="0" Text="User:" TextColor="Black" FontAttributes="Bold"/>
                        <Label Grid.Row="0" Grid.Column="1" x:Name="userNameLabel" Text="Admin User" TextColor="Black"/>

                        <Label Grid.Row="1" Grid.Column="0" Text="Role:" TextColor="Black" FontAttributes="Bold"/>
                        <Label Grid.Row="1" Grid.Column="1" x:Name="userRoleLabel" Text="Administrator" TextColor="Black"/>

                        <Label Grid.Row="2" Grid.Column="0" Text="Last Login:" TextColor="Black" FontAttributes="Bold"/>
                        <Label Grid.Row="2" Grid.Column="1" x:Name="lastLoginLabel" Text="Today" TextColor="Black"/>
                    </Grid>

                    <Button Text="🔐 Change Password" 
                            BackgroundColor="#f44336" 
                            TextColor="White" 
                            CornerRadius="5"
                            Clicked="OnChangePasswordClicked"/>

                    <Button Text="🚪 Logout" 
                            BackgroundColor="#d32f2f" 
                            TextColor="White" 
                            CornerRadius="5"
                            Clicked="OnLogoutClicked"/>

                </VerticalStackLayout>
            </Frame>

            <!-- App Info -->
            <Frame BackgroundColor="#e8f5e9" Padding="15" CornerRadius="10">
                <VerticalStackLayout>
                    <Label Text="Madina Enterprises" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           TextColor="Black" 
                           HorizontalOptions="Center"/>
                    <Label Text="Cotton Brokerage Management System" 
                           FontSize="12" 
                           TextColor="#666" 
                           HorizontalOptions="Center"/>
                    <Label Text="Version 1.0.0" 
                           FontSize="11" 
                           TextColor="#999" 
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>